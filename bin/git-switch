#!/usr/bin/env fish
# vim: set syntax=fish:

set target $argv[1]

set current (git rev-parse --abbrev-ref HEAD)
git stash save -k -u "$current-wip"
git checkout $target
set target_stash (git stash list | grep "$target-wip" | awk -F: '{print $1}')
if [ -n "$target_stash" ]
    git stash pop $target_stash
end
git ff
