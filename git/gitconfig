# This is Git's per-user configuration file.
[user]
	name = Ryan Goldstein
	email = ryanisaacg@gmail.com
[alias]
    pl=pull --ff-only --prune
    pu=push
    ac=!git active
    st=status
    sl=!git smartlog
    sw=checkout
    hs=!git history
    cm=commit --verbose --all

    ff=merge --ff-only
    amend=commit --amend --verbose --all
    smartlog=log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit master..HEAD
    history=log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    staged = diff --cached
    tags = tag -l
    active= branch -l
    branches = branch -a
    remotes = remote -v
    stashes = stash list
[core]
	excludesfile = ~/.config/dotfiles/git/.gitignore_global
[merge]
	defaultToUpstream = true
[credential]
	helper = store
