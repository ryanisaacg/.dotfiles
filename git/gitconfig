# This is Git's per-user configuration file.
[user]
	name = Ryan Goldstein
	email = ryanisaacg@gmail.com
[alias]
    ff = merge --ff-only
    down = !git fetch --prune && git ff
    up = push
    staged = diff --cached
    tags = tag -l
    branches = branch -a
    remotes = remote -v
    stashes = stash list
[core]
	excludesfile = ~/.config/dotfiles/git/.gitignore_global
[merge]
	defaultToUpstream = true
