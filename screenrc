# Have a numbered tab bar with colorized host and date information in the corner
caption always "%{= kw}%-w%{= BW}%n %t%{-}%+w %-= %{= rb} @%H %{-}%{= yb} %LD %d %LM - %c %{-}"
# Set a 10,000 line scrollback
defscrollback 10000
# Make window numbering start at 1
bind c screen 1
bind 0 select 10
screen 1
escape ^Ss
